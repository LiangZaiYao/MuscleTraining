<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_triangle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.cqu.muscletraining.TriangleActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/triangle"
        android:layout_centerHorizontal="true"
        android:scaleType="matrix"
        android:layout_marginTop="48dp"
        android:id="@+id/ivTriangle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/trianglepure"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:scaleType="matrix"
        android:id="@+id/ivTrianglePure"
        android:layout_alignTop="@+id/ivTriangle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Done"
        android:background="@drawable/btnshape"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivTrianglePure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/button5"
        android:onClick="onClickBack"/>
</RelativeLayout>
